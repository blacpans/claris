# Google Cloud
GOOGLE_CLOUD_PROJECT="your-project-id"
GOOGLE_CLOUD_LOCATION="global"

# Gemini
GEMINI_MODEL="gemini-3-pro-preview"

# GitHub
GITHUB_TOKEN="ghp_your_github_personal_access_token"
GITHUB_WEBHOOK_SECRET="your_webhook_secret_for_signature_verification"

# Firestore
FIRESTORE_COLLECTION="claris-sessions"

# Server
PORT=8080

# Google OAuth
# Cloud Run では Secret Manager で管理することを推奨
GOOGLE_CLIENT_ID="your-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-oauth-client-secret"
# ローカル開発: http://localhost:8080/oauth2callback
# Cloud Run本番: https://<YOUR_SERVICE_URL>/oauth2callback
GOOGLE_REDIRECT_URI="http://localhost:8080/oauth2callback"
