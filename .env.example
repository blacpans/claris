# Google Cloud
NAVI_NAME="Claris"
BOT_NAME="claris-bot"
GOOGLE_CLOUD_PROJECT="your-project-id"
GOOGLE_CLOUD_LOCATION="asia-northeast1"
TZ="Asia/Tokyo"

# Gemini Models
# Live API (Multimodal)
GEMINI_LIVE_MODEL="gemini-live-2.5-flash-native-audio"
GEMINI_LIVE_LOCATION="us-central1"

# Generation (Text/Chat)
GEMINI_FLASH_MODEL="gemini-3-flash-preview"
GEMINI_PRO_MODEL="gemini-3-pro-preview"
GEMINI_GENERATE_LOCATION="global"

# API Version
GEMINI_API_VERSION="v1beta1"

# GitHub
# Personal Access Token with repo scope
GITHUB_TOKEN="ghp_your_personal_access_token"
# Secret for webhook signature verification
GITHUB_WEBHOOK_SECRET="your_webhook_secret"

# Firestore
FIRESTORE_COLLECTION="claris-sessions"
# Custom Auth Collection
FIRESTORE_AUTH_COLLECTION="claris-auth"

# Server
PORT=8080

# Google OAuth 2.0
# Recommended: Manage in Secret Manager for Cloud Run
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
# Local: http://localhost:8080/oauth2callback
# Production: https://your-domain.com/oauth2callback
GOOGLE_REDIRECT_URI="http://localhost:8080/oauth2callback"

# Security
# Secret to protect /auth/google and state verification
AUTH_SECRET="your-random-auth-secret"

# Google Maps (Places, Directions)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_GENAI_API_KEY="your-google-genai-api-key"

# Vertex AI Search (Agent Builder)
VERTEX_SEARCH_DATA_STORE_ID="your-vertex-data-store-id"
VERTEX_SEARCH_SERVING_CONFIG="default_config"

# Web Push (VAPID)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:your-email@example.com"

# Relay Server (Sensory Interface)
RELAY_PORT=3000

# Summarization / Memory
SUMMARY_TIMEOUT_MS=10000

# Pub/Sub Configuration (Local development with emulators/relay)
PUBSUB_SUBSCRIPTION="claris-local-sub"

# Token Storage
# "file" for local, "firestore" for production/Cloud Run
TOKEN_STORE_TYPE="file"
