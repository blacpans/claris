# Base Configuration (Shared)
# Override these in .env.local or .env.{env}

# Claris Identity
CLARIS_NAME="Claris"

# Server
PORT=8080
TZ="Asia/Tokyo"

# Google Cloud
GOOGLE_CLOUD_PROJECT=""
GOOGLE_CLOUD_LOCATION="asia-northeast1"
GEMINI_MODEL="gemini-1.5-pro"

# Firestore
FIRESTORE_COLLECTION="claris-sessions"
FIRESTORE_AUTH_COLLECTION="claris-auth"

# Token Storage
TOKEN_STORE_TYPE="file"

# GitHub (Empty by default)
GITHUB_TOKEN=""
GITHUB_WEBHOOK_SECRET=""

# Google OAuth (Empty by default)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:8080/oauth2callback"
AUTH_SECRET=""
