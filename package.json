{
  "name": "claris",
  "version": "0.19.2",
  "description": "Claris - An Agentic NetNavi built with Google ADK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claris": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json --resolve-full-paths",
    "lint": "biome check .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "keywords": [
    "adk",
    "agent",
    "netnavi",
    "gemini"
  ],
  "author": "blacpans",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@google-cloud/firestore": "^8.2.0",
    "@google-cloud/pubsub": "^5.2.2",
    "@google/adk": "^0.2.0",
    "@google/genai": "^1.38.0",
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@hono/node-server": "^1.14.1",
    "@octokit/rest": "^22.0.1",
    "axios": "^1.13.4",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.2",
    "fkill": "^10.0.3",
    "googleapis": "^170.1.0",
    "hono": "^4.7.4",
    "mic": "^2.1.2",
    "node-record-lpcm16": "^1.0.1",
    "open": "^11.0.0",
    "speaker": "^0.5.5",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.13.1",
    "@types/ws": "^8.18.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
